<h1>Edit Course</h1>

<form action="/courses/edit" method="post">
    <div class="input-field">
        <input placeholder="Placeholder" name="title" id="title" type="text" class="validate"  value="{{course.title}}"required>
        <label for="title">Name Courses</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" value="{{course.price}}" required min='1'>
        <label for="price">Price Courses</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" name="img" id="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Enter the URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit Course</button>
</form>