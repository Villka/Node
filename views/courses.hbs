<h1>Courses</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 m5">
        <div class="card">
        <div class="card-image">
            <img src="{{img}}" alt={{title}}>
        </div>
        <div class="card-action">
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <a href="/courses/{{id}}">zacząć</a>
        </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h2>Курсов нет</h2>
{{/if}}