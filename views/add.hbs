<h1>ADD</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input placeholder="Placeholder" name="title" id="title" type="text" class="validate" required>
        <label for="title">Name Courses</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" name="price" id="price" type="number" class="validate" required min='1'>
        <label for="price">Price Courses</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input placeholder="Placeholder" name="img" id="img" type="number" class="validate" required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="Enter the URL"></span>
    </div>

    <button class="btn btn-primary">Add Courses</button>
</form>